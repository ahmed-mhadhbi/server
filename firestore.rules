rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Menu items - readable by all, writable by authenticated staff
    match /menus/{menuId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Categories - readable by all, writable by authenticated staff
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Orders - readable by staff, writable by all (customers can create)
    match /orders/{orderId} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    
    // Waiter calls - readable by staff, writable by all
    match /waiterCalls/{callId} {
      allow read: if request.auth != null;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    
    // Staff - readable/writable by authenticated staff only
    match /staff/{staffId} {
      allow read, write: if request.auth != null;
    }
    
    // Table sessions - readable by all, writable by authenticated staff
    match /tables/{tableId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

